<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-5">

            <h2>Edit</h2>

            <form id="form" action="/{{_id}}/edit" method="post">

                <div class="form-group">
                    <label for="username">Username</label>
                    <input name="username" type="text" value="{{username}}" class="form-control" id="username">
                </div>

                <div class="form-group">
                    <label for="name">Name</label>
                    <input name="name" type="text" class="form-control" value="{{name}}" id="name">
                </div>

                <div class="form-group">
                    <label for="password">Password</label>
                    <input name="password" type="password" class="form-control" id=" password">
                    <small class="form-text text-muted"></small>
                </div>

                <div class="form-group">
                    <label for="profileImg">profile Img</label>
                    <input name="profileImg" type="profileImg" class="form-control" value="{{profileImg}}"
                        id="profileImg">
                    <small class="form-text text-muted"></small>
                </div>

                <div class="form-group">
                    <label for="description">Description</label>
                    <input name="description" type="description" class="form-control" value="{{description}}"
                        id="description">
                    <small class="form-text text-muted"></small>
                </div>

                <div class="form-group">
                    <label for="facebookId">Facebook Id</label>
                    <input name="facebookId" type="facebookId" class="form-control" value="{{facebookId}}"
                        id="facebookId">
                    <small class="form-text text-muted"></small>
                </div>

                <div class="form-group">
                    <label for="role">Role</label>

                    <select name="role" id="role">
                        <p>Elige una opci√≥n:</p>
                        <option value=""></option>
                        <option value="">TA</option>
                        <option value="">GUEST</option>
                        <option value="">DEV</option>
                        <option value="">STUDENT</option>



                    </select>
                </div>

                <button type="submit" class="btn btn-dark">Edit</button>

                <p class="error">{{errorMsg}}</p>
            </form>
        </div>
    </div>
</div>